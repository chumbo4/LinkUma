<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chumboapp.linkuma.controllers.EventActivity"
    android:orientation="vertical"
    android:weightSum="120">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Name"
        android:id="@+id/name_event_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:background="#fad20b"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_weight="20"
        android:visibility="visible"
        android:typeface="normal"
        android:singleLine="false"
        android:paddingTop="20dp"
        android:textSize="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="21"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="04/04/2016"
            android:id="@+id/date_start_event_view"
            android:layout_weight="10"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="09:10 - 15:44"
            android:id="@+id/hour_start_event_view"
            android:layout_weight="10"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="22"
        android:text="Description"
        android:background="#fad20b"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="20dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:paddingTop="5dp"></TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_weight="16">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/description_event_view"
            android:text="This is a example for a description. This is a example for a description.
             This is a example for a description. This is a example for a description.
              a description. This is a example for a description.
            This is a example for a description
            . This is a example for a description. This is a example for a description.
            a description. This is a example for a description.
            This is a example for a description
            . This is a example for a description. This is a example for a description. "
            android:padding="15dp" />
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="22"
        android:text="Location"
        android:background="#fad20b"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="20dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"></TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_weight="19"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/direction_event_view"
            android:text="This is a example for a description. This is a example for a description.
             This is a example for a description. This is a example for a description.
              a description. This is a example for a description.
            This is a example for a description
            . This is a example for a description. This is a example for a description.
            a description. This is a example for a description.
            This is a example for a description
            . This is a example for a description. This is a example for a description. "
            android:padding="15dp" />
    </ScrollView>

</LinearLayout>
